<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.imransk.bitmproject.Activity.Log_in_Activity">

    <ProgressBar
        android:id="@+id/log_in_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/email_ET_login"
        android:layout_width="match_parent"
        android:layout_height="50sp"

        android:textColor="@color/text_color"
        android:textColorHint="#FFF"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/buttonshape"
        android:gravity="center"
        android:hint="E-mail"/>

    <EditText
        android:textColor="@color/text_color"
        android:textColorHint="#FFF"
        android:id="@+id/pass_ET_login"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:inputType="textPassword"
        android:gravity="center"
        android:background="@drawable/buttonshape"
        android:hint="password"/>

    <Button
        android:textColor="@color/text_color"
        android:id="@+id/login_Btn"
        android:background="@drawable/buttonshape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:text="Login"
        android:textAllCaps="false"/>

    <Button
        android:textColor="@color/text_color"
        android:id="@+id/go_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@drawable/buttonshape"
        android:onClick="go_Register"
        android:padding="10sp"
        android:text="SignUp ? click here"
        android:textAllCaps="false"/>
</LinearLayout>
