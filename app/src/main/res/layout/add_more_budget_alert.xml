<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:gravity="center"
        android:text="Add More Budget"
        android:textAllCaps="false"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:background="@drawable/buttonshape"
        android:gravity="center"
        android:text="Your Current Budget"

        android:textColor="@color/text_color"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/current_budget_ID_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:background="@drawable/buttonshape"
        android:gravity="center"
        android:text="Budget TK"
        android:textColor="@color/text_color"
        android:textSize="25sp" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:background="@drawable/buttonshape"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/text_color"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/new_budget_ID_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:gravity="center"
        android:hint="New TK"
        android:textColor="@color/text_color"
        android:textColorHint="#f40b0b" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp">

        <Button
            android:id="@+id/cancel_budget_btn_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <Button

            android:id="@+id/add_budget_btn_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/buttonshape"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="25sp" />
    </RelativeLayout>

</LinearLayout>